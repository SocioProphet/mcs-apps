{
  "name": "mcs-gui",
  "version": "1.0.0",
  "description": "Graphical user interfaces",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@tetherless-world/twxplore-base": "1.0.13",
    "@types/d3": "^5.7.2",
    "@types/mui-datatables": "^3.4.0",
    "d3": "^5.16.0",
    "mui-datatables": "3.5.0",
    "query-string": "^6.13.1",
    "string-similarity": "^4.0.2",
    "use-query-params": "1.1.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.2.0",
    "@graphql-codegen/fragment-matcher": "1.2.0",
    "@typescript-eslint/parser": "2.34.0",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.34.0",
    "apollo": "2.10.2",
    "copy-webpack-plugin": "4.6.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.0.0-alpha",
    "prettier": "^2.0.1",
    "ts-loader": "^8.0.4",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "tslint": "^6.1.3",
    "typescript": "4.0.5",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "license": "Apache-2.0",
  "repository": "https://github.com/tetherless-world/mcs-apps.git",
  "scripts": {
    "build-benchmark": "webpack --config config/benchmark/webpack.config.js --mode production -p",
    "build-kg": "webpack --config config/kg/webpack.config.js --mode production -p",
    "generate-benchmark": "graphql-codegen --config src/benchmark/api/graphql-codegen-config.yml && node_modules/.bin/apollo codegen:generate --endpoint http://localhost:9000/api/graphql --target=typescript --includes=src/benchmark/**/*.graphql --tagName=gql --addTypename --globalTypesFile=src/benchmark/api/graphqlGlobalTypes.ts types",
    "generate-kg": "graphql-codegen --config src/kg/api/graphql-codegen-config.yml && node_modules/.bin/apollo codegen:generate --endpoint http://localhost:9000/api/graphql --target=typescript --includes=src/kg/**/*.graphql --tagName=gql --addTypename --globalTypesFile=src/kg/api/graphqlGlobalTypes.ts types",
    "start-benchmark": "webpack-dev-server --config config/benchmark/webpack.config.js --mode development --hot --info-verbosity verbose --inline",
    "start-kg": "webpack-dev-server --config config/kg/webpack.config.js --mode development --hot --info-verbosity verbose --inline"
  }
}
